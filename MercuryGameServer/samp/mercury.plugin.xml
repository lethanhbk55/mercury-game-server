<mercury>
	<name>[plugin name]</name> <!-- Same folder name under folder plugins -->

	<zone>
		<name>[zone name]</name>
		<handle>[handle class]</handle>
		<joinRoomCallback>[join room callback class default null]</joinRoomCallback>
		<joinRoomNavigator>[navigator class default null]</joinRoomNavigator>
		
		<roomConfig>
			<workerpool>
				<poolsize>8</poolsize>
				<ringbuffersize>2048</ringbuffersize>
				<threadnamepattern>Room Worker #%d</threadnamepattern>
			</workerpool>
		</roomConfig>

		<scheduler>
			<counter>4</counter>
			<workerpool>
				<poolsize>8</poolsize>
				<ringbuffersize>2048</ringbuffersize>
				<threadnamepattern>Zone Worker #%d</threadnamepattern>
			</workerpool>
		</scheduler>

		<variables>
			
		</variables>
	</zone>

	<lifecycles>
		<entry>
			<name>[life cycle name]</name>
			<handle>[handle class]</handle>
			<variables></variables>
		</entry>

		<plugin>
			<name>[handler name]</name>
			<handle>[handle class]</handle>
			<variables></variables>
		</plugin>

		<managedobject>
			<name>[managed object name]</name>
			<handle>[handle class]</handle>
			<variables></variables>
		</managedobject>
	</lifecycles>
</mercury>